<Window x:Class="Project.FrmSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Search" Height="200" Width="300" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" FontFamily="Arial" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="BtnSearch" Content="Search" HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top" Height="29" Width="72" Click="BtnSearch_Click"/>
        <Label x:Name="LblSearch" Content="User SSN:" HorizontalAlignment="Left" Margin="37,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtSearch" HorizontalAlignment="Left" Margin="113,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
